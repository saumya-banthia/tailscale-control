{
  "name": "tailscale-control",
  "version": "0.1.3",
  "description": "A Decky plugin to activate and deactivate Tailscale, while staying in Gaming mode. [Note: Tailscale needs to be installed, this works only like a switch for the same.]",
  "scripts": {
    "build": "shx rm -rf dist && rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saumya-banthia/tailscale-control.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "plugin-template",
    "steam-deck",
    "deck"
  ],
  "author": "Saumya Banthia <2ac8yxnb@duck.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/saumya-banthia/tailscale-control/issues"
  },
  "homepage": "https://github.com/saumya-banthia/tailscale-control#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/react": "16.14.0",
    "@types/webpack": "^5.28.5",
    "decky-frontend-lib": "^3.25.0",
    "rollup": "^2.79.2",
    "rollup-plugin-import-assets": "^1.1.1",
    "shx": "^0.3.4",
    "tslib": "^2.8.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "react-icons": "^4.12.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom",
        "decky-frontend-lib"
      ]
    }
  }
}
